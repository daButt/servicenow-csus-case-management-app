        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	//get all related requested items which are canvas merge requests, and update their case manager references
	var m2m = new GlideRecord('x_casus_csm_m2m_tasks_cases');
	m2m.addQuery('case', current.sys_id);
	m2m.addQuery('task_type', 'sc_req_item');
	m2m.query();

	while(m2m.next()) {
		
		var ritm = new GlideRecord('sc_req_item');
		if(ritm.get(m2m.task)) {
		
			ritm.variables.case_worker = current.assigned_to;
			ritm.update();
		}
	}
	

})(current, previous);]]></script>
