        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	//leave record of removal of item from case
	var cs = new GlideRecord('x_casus_csm_case');
	if(cs.get(current.getValue('case'))) {
		
		//query table of task type
		var rec = new GlideRecord(current.task_type);
		if(rec.get(current.task)) {
			
			rec.work_notes = "Removed from case " + cs.number;
			rec.update();
		}
	}
	
	

})(current, previous);]]></script>
