        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Find an active case with the same two people
	var cs = new GlideRecord('x_casus_csm_case');
	cs.addQuery('client', current.customer.sys_id);
	cs.addQuery('assigned_to', current.resource.user.sys_id);
	cs.addActiveQuery();
	cs.query();
	
	if (cs.next()) {
		// Create new record in m2m table for case and reservation (this)
		var m2m = new GlideRecord('x_casus_csm_m2m_cases_reservations');
		m2m.initialize();
		m2m.setValue('case', cs.sys_id);
		m2m.reservation = current.sys_id;
		m2m.insert();
		
		cs.work_notes = "Added Reservation " + current.number;
		current.notes = "Added Case " + cs.number;
		cs.update();
		current.update();
	}

})(current, previous);]]></script>
