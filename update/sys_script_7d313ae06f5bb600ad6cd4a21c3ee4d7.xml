        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	//assign this incident to a case if a case exists for this user.  Do not create, as case managers will handle that if need be

	var cs = new GlideRecord('x_casus_csm_case');
	cs.addQuery('client', current.caller_id);
	cs.addQuery('assignment_group', current.assignment_group);
	cs.addQuery('assigned_to', current.assigned_to);
	cs.addActiveQuery();
	cs.query();
	
	if(cs.next()) {
		//is this item already linked to a case?
		var m2m = new GlideRecord('x_casus_csm_m2m_tasks_cases');
		m2m.addQuery('task', current.sys_id);
		m2m.query();

		if(!m2m.next()) {
			m2m.initialize();

			m2m.task = current.sys_id;
			m2m.setValue('case', cs.sys_id);
			
			m2m.insert();
		}
	}

})(current, previous);]]></script>
