        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var tsk = new GlideRecord('task');
	if(tsk.get(current.task)) {
	
		current.task_type = tsk.getTableName();
		current.short_description = tsk.short_description;
		current.state = tsk.state.getDisplayValue();
		
		//update case work notes to display item added
		var cs = new GlideRecord('x_casus_csm_case');
		if(cs.get(current.getValue('case'))) {
			
			tsk.work_notes = "This item has been added to case " + cs.number;
			tsk.update();
			
			cs.work_notes = tsk.number + " added to this case";
			cs.update();
		}
	
	}

})(current, previous);]]></script>
